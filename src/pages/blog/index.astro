---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!DOCTYPE html>
<html lang="en" transition:animate="none">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body transition:animate="none">
		<Header />
		<main class="w-[960px]">
			<section>
				<ul class="flex flex-wrap md:gap-8 list-none m-0 p-0 gap-2">
					{
						posts.map((post) => (
							<li class="w-full md:w-[calc(50%-1rem)] first-of-type:w-full first-of-type:text-center text-center md:text-start first-of-type:md:mb-4 group" transition:animate="slide">
								<a href={`/blog/${post.slug}/`} class= "no-underline block">
									<img width={720} height={360} src={post.data.heroImage} alt="" class="group-hover:shadow-card transition-all duration-200 mb-2 rounded-xl" />
									<h4 class="m-0 title text-black group-hover:text-accent transition-all duration-200 group-first:md:text-4xl group-first:text-2xl">{post.data.title}</h4>
									<p class="m-0 date text-gray group-hover:text-accent transition-all duration-200">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
